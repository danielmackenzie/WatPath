/* Mobile layout */

@media only screen 
and (min-device-width : 300px) 
and (max-device-width : 680px) {

  #container {
    width: 100%;
  }

  #content {
    width: 100%;
    line-height: 100px;
  }

  .push {
    height: 80px;
  }

  h1 {
    font-size: 100px;
    padding-top: 2px;
    text-align: center;
    font-family: 'Ubuntu';
  }

  #footer {
    width: 100%;
    height: 200px;
    background-color: rgba(1, 1, 1, 0.9);
    border-top: dashed;
    bottom: 0;
    right: 0;
    left: 0;
    position: absolute;
  }

  /* Thin Layout */
  body.thin #container {
    width: 100%;
    padding-top: 120px;
  }

  body.wide .row {
    position: none;
  }

  body.thin .row {
    float: none;
  }
}